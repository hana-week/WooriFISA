import re

def check_num():
  num = input('0 ì´ìƒì˜ ì •ìˆ˜ ì¶œë ¥')
  pat = re.compile(r'[\D]+')

  if re.match(pat, num):
    return print('ì˜ëª» ì…ë ¥í•˜ì…¨ìŠµë‹ˆë‹¤')

  else:
    return print('True')


