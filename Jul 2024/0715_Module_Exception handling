    # r.readline() # í•œì¤„ì”© \n ë‹¨ìœ„ë¡œ í…ìŠ¤íŠ¸ ë°ì´í„°ë¥¼ êº¼ë‚´ì˜µë‹ˆë‹¤.
    # r.readlines() # ì „ì²´ ë°ì´í„°ë¥¼ \n ë‹¨ìœ„ë¡œ ëŠì–´ì„œ ë¦¬ìŠ¤íŠ¸ë¡œ ì¶œë ¥í•©ë‹ˆë‹¤.
    for r in r.readlines():
        print(r, end='') # ì „ì²´ ë°ì´í„°ë¥¼ \n ë‹¨ìœ„ë¡œ ëŠì–´ì„œ ë¦¬ìŠ¤íŠ¸ë¡œ ì¶œë ¥í•©ë‹ˆë‹¤.

# íŒŒì¼ì´ ìˆìœ¼ë©´ ê·¸ íŒŒì¼ì˜ ë‚´ìš©ì„ ëª¨ë‘ ì¶œë ¥
# íŒŒì¼ì´ ì—†ìœ¼ë©´ ìƒˆë¡œìš´ íŒŒì¼ì„ ì‘ì„±í•´ì„œ 'ìƒˆ íŒŒì¼'
# íŒŒì¼ì„ ë‹¤ ì“°ê³  ë‚˜ì„œ close()ë¡œ ë‹«ì•„ì£¼ê¸°
try:
    f = open('testex.txt', 'r')

except FileNotFoundError:
    print('í•´ë‹¹í•˜ëŠ” íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤. ìƒˆ íŒŒì¼ì„ ìƒì„±í•©ë‹ˆë‹¤.')
    f = open('testex.txt', 'w')
    f.write('ìƒˆ íŒŒì¼ì…ë‹ˆë‹¤.')

except:
    print('ê·¸ ì™¸ì˜ ë¬¸ì œê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.')

else:
    #íŒŒì¼ì´ ì¡´ì¬í•  ê²½ìš° íŒŒì¼ ë‚´ìš© ëª¨ë‘ ì¶œë ¥
    texts = f.readlines()
    for text in texts:
        print(text)

finally:
    f.close()
    print('íŒŒì¼ì„ ë‹«ì•˜ìŠµë‹ˆë‹¤.')

# ì–‘ìˆ˜ë¡œë§Œ ê°’ì„ ë°›ì•„ì„œ ë‚˜ëˆ„ê³  ì‹¶ì€ë° ìê¾¸ ìŒìˆ˜ ë„£ëŠ” ì‚¬ëŒì´ ìˆì–´ìš”
# ìŒìˆ˜ì¼ ë•ŒëŠ” ì—ëŸ¬ -> exceptë¡œ ë„˜ê²¨ë²„ë¦¬ëŠ” ê±°ì—ìš”

# ìƒˆë¡œ ì—ëŸ¬ë¥¼ ë§Œë“¤ê³  ì‹¶ì„ ë•ŒëŠ” í•´ë‹¹ í´ë˜ìŠ¤ë¥¼ ë§Œë“¤ì–´ì¤˜ì•¼ í•©ë‹ˆë‹¤.
class NegativeDivisionError(Exception):
    def __init__(self, value):
        self.value = value

def PositiveDivide(a, b):
    if (b<0):
        raise NegativeDivisionError(b) # ì‚¬ìš©ìê°€ ì„ì˜ë¡œ ì—ëŸ¬ë¥¼ ë§Œë“¤ì–´ì„œ ì—ëŸ¬ì˜ í´ë˜ìŠ¤ê¹Œì§€ ë”°ë¡œ ë§Œë“¤ì–´ì„œ ì²˜ë¦¬
    return a / b

try:
    ex = PositiveDivide(3,-11)
except ZeroDivisionError as e:
        print( e, 'ZeroDivisionError' )
except NegativeDivisionError as e: # NegativeDivisionError: -11
        print( e, 'NegativeDivisionError' )
except Exception as e:
    print( e, 'Exception' )



